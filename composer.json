{
    "name": "firehub/core-standard",
    "description": "FireHub Web Application Framework - Standard Edition",
    "type": "library",
    "keywords": ["php", "framework", "core", "standard", "firehub"],
    "homepage": "https://the-firehub-project.github.io/Core/",
    "license": "OSL-3.0",
    "require": {
        "php": "^8.5",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "phpunit/phpunit": "^12.0",
        "pestphp/pest": "^4",
        "pestphp/pest-plugin-type-coverage": "^4",
        "pestphp/pest-plugin-stressless": "^4",
        "pestphp/pest-plugin-profanity": "^4",
        "pestphp/pest-plugin-browser": "^4",
        "pestphp/pest-plugin-faker": "^4",
        "pestphp/pest-plugin-arch": "^4",
        "ext-zip": "*",
        "ext-openssl": "*",
        "ext-sockets": "*"
    },
    "suggest": {
        "php-64bit": "^8.5",
        "ext-apcu": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Danijel GaliÄ‡",
            "email": "danijel.galic@outlook.com",
            "homepage": "https://github.com/dieselxxx",
            "role": "Owner"
        }
    ],
    "support": {
        "email": "danijel.galic@outlook.com",
        "issues": "https://github.com/The-FireHub-Project/Core-Standard/issues",
        "security": "https://github.com/The-FireHub-Project/Core-Standard/security/policy",
        "forum": "https://github.com/orgs/The-FireHub-Project/discussions",
        "wiki": "https://github.com/The-FireHub-Project/Core-Standard/wiki",
        "source": "https://github.com/The-FireHub-Project/Core-Standard",
        "docs": "https://the-firehub-project.github.io/Core-Standard/"
    },
    "funding": [
        {
            "type": "patreon",
            "url": "https://www.patreon.com/firehub"
        }
    ],
    "config": {
        "process-timeout": 300,
        "preferred-install": {
            "*": "dist"
        },
        "disable-tls": false,
        "secure-http": true,
        "vendor-dir": "vendor",
        "bin-dir": "vendor/bin",
        "prepend-autoloader": false,
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}